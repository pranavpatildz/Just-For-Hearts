generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([email])
}

model Doctor {
  id             String        @id @default(cuid())
  name           String
  slug           String        @unique
  designation    String
  specialization String
  bio            String?
  imageUrl       String?
  isActive       Boolean       @default(true)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]

  @@index([slug])
  @@index([isActive])
}

model Program {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isPublished Boolean  @default(false)

  @@index([slug])
  @@index([isPublished])
}

model Appointment {
  id           String            @id @default(cuid())
  patientName  String
  patientEmail String
  patientPhone String?
  message      String?
  status       AppointmentStatus @default(PENDING)
  doctorId     String
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  doctor       Doctor            @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
  @@index([status])
  @@index([patientEmail])
  @@index([createdAt])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

enum AdminRole {
  ADMIN
  SUPER_ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
